<%= form_with(model: ticket) do |form| %>
<% if ticket.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% ticket.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :passenger_id, class: label_class %>
          <%= form.text_field :passenger_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :route_id, class: label_class %>
          <%= form.text_field :route_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :bus_id, class: label_class %>
          <%= form.text_field :bus_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :booking_date, class: label_class %>
          <%= form.datetime_field :booking_date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :seat_number, class: label_class %>
          <%= form.number_field :seat_number, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :fare, class: label_class %>
          <%= form.text_field :fare, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if ticket.persisted? %>
<%= link_to "Cancel", ticket, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", tickets_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
