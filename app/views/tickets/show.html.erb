<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Ticket</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to tickets_path, class: button_class(theme: "transparent") do %>
      All Tickets
      <% end %>
      <% if user_signed_in? %>
        <%= link_to 'Edit Ticket', edit_ticket_path(@ticket) %>
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Passenger:</p>
        <p><%= @ticket.passenger.name %></p>
      </li>
      <li>
        <p class="font-semibold">Route:</p>
        <p><%= @ticket.route.route_name %></p>
      </li>
      <li>      l,
        <p class="font-semibold">Bus:</p>
        <p><%= @ticket.bus.bus_number %></p>
      </li>
      <li>
        <p class="font-semibold">Booking date:</p>
        <p><%= @ticket.booking_date %></p>
      </li>
      <li>
        <p class="font-semibold">Seat number:</p>
        <p><%= @ticket.seat_number %></p>
      </li>
      <li>
        <p class="font-semibold">Fare:</p>
        <p><%= @ticket.fare %></p>
      </li>
  </ul>
</div>
